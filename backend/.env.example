# backend/.env.example

# Server
NODE_ENV=development
PORT=4000

# Database (MongoDB)
# If you run with Docker Compose (mongo service + root user):
MONGO_URI=mongodb://root:rootpass@mongo:27017/social?authSource=admin

# If you run MongoDB locally (no auth by default):
# MONGO_URI=mongodb://127.0.0.1:27017/social

# JWT
JWT_SECRET=CHANGE_ME_TO_A_LONG_RANDOM_SECRET
JWT_EXPIRES_IN=7d

# Uploads (local storage)
# Recommended: keep uploads outside src (e.g., backend/uploads)
UPLOAD_DIR=uploads
MAX_FILE_SIZE_MB=10
ALLOWED_IMAGE_MIME=image/jpeg,image/png,image/webp

# CORS
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# Logging
LOG_LEVEL=info
